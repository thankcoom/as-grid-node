{
    "service": {
        "name": "grid-node",
        "dockerfile": "Dockerfile",
        "env": {
            "AUTH_SERVER_URL": {
                "description": "AS Grid 官方服務器 (自動設定)",
                "default": "https://louisasgrid.zeabur.app",
                "required": true
            },
            "BITGET_UID": {
                "description": "您的 Bitget 交易所 UID（從 Deploy 頁面複製）",
                "required": true
            },
            "NODE_SECRET": {
                "description": "節點密鑰 (自動生成，可自訂)",
                "default": "default_insecure_secret"
            }
        }
    }
}